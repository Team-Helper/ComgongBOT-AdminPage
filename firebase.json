{
    "hosting": {
        "public": "build",
        "ignore": [
            "firebase.json", "**/.*", "**/node_modules/**"
        ],
        "cleanUrls": true,
        "headers": [
            {
                "source": "**",
                "headers": [
                    {
                        "key": "Access-Control-Allow-Origin",
                        "value": "*"
                    }
                ]
            }, {
                "source": "**/*.html",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=0, no-cache"
                    }, {
                        "key": "test",
                        "value": "contents"
                    }
                ]
            }, {
                "source": "**/*.@(css|js)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=3500"
                    }
                ]
            }, {
                "source": "**/*.@(jpg|jpeg|gif|png)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=3300"
                    }
                ]
            }
        ]
    },
    "emulators": {
        "hosting": {
            "port": 5000
        },
        "ui": {
            "enabled": true
        },
        "firestore": {
            "port": 8080
        },
        "storage": {
            "port": 9199
        },
        "auth": {
            "port": 9099
        }
    },
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "storage": {
        "rules": "storage.rules"
    }
}
