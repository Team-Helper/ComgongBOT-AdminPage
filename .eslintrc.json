{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "semi": "error",
        "no-unused-vars": "error",
        "default-case": "error",
        "default-case-last": "error",
        "id-length": "error",
        "max-depth": [
            "error", {
                "max": 3
            }
        ],
        "max-nested-callbacks": [
            "error", 3
        ],
        "no-plusplus": "error"
    }
}
